extends ../layout
block content
  div.row
    div.col-md-12
      h1= title
      p Create User
      form.form-inline(action='/users/new' method='post' role='form')
        div.form-group
          label(for='email') Email address
          input(type='email' class='form-control' id='email' placeholder='Enter email address' name='email')
        br
        br
        div.form-group
          label(for='name') Name
          input(type='name' class='form-control' id='name' placeholder='Enter account name' name='name')
        br
        br
        div.form-group
          label(for='password') Password
          input(type='password' class='form-control' id='password' name='password')
        br
        br
        div.form-group
          label(for='password_confirm') Password Confirm
          input(type='password' class='form-control' id='password_confirm' name='password_confirm')
        br
        br
        button(type='submit' class='btn btn-default') Sign up

extends ../layout
= settings.session
block content
  div.row
    div.col-md-12
      h1= title
      p Login
      form.form-inline(action='/users/login' method='post' role='form')
        div.form-group
          label(for='username') Name
          input(type='username' class='form-control' id='username' placeholder='Enter account name' name='username')
        br
        br
        div.form-group
          label(for='password') Password
          input(type='password' class='form-control' id='password' name='password')
        br
        br
        button(type='submit' class='btn btn-default') Sign up
